{
  "name": "nairagig-backend",
  "version": "1.0.0",
  "description": "Enterprise-grade backend for NairaGig platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --noEmitOnError",
    "build:production": "tsc --skipLibCheck || exit 0",
    "build:force": "tsc --noEmitOnError false --skipLibCheck",
    "start": "npx prisma migrate deploy && node dist/server.js",
    "dev": "ts-node-dev --require ./tsconfig-paths.js --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "seed:tiers": "ts-node prisma/seed-tiers.ts",
    "seed:rewards": "ts-node prisma/seed-rewards.ts",
    "setup:admin": "ts-node scripts/setup-admin.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.7.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cheerio": "^0.22.35",
    "@types/cookie-parser": "^1.4.10",
    "@types/socket.io": "^3.0.1",
    "@types/validator": "^13.15.10",
    "aws-sdk": "^2.1506.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.1",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "openai": "^6.15.0",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.6.11",
    "socket.io": "^4.8.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.26",
    "winston": "^3.11.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.21",
    "@types/passport": "^1.0.16",
    "@types/passport-apple": "^2.0.3",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-linkedin-oauth2": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
